<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abel.code2040.NeedleHaystack">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:text="step_iii_needle_in_a_haystack"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/txt_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:text="textview"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/txt_descrip"
            android:layout_marginTop="10dp"
            tools:ignore="ObsoleteLayoutParum, UnknownId"
            android:layout_weight="0.46" />

        <TextView
            android:text="needle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/txt1"
            android:layout_marginTop="0dp"
            android:selectAllOnFocus="false"
            android:ems="10"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:text="array"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/txt2"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:layout_weight="0.53"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:text="location in array"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/txt3"
            android:ems="10"
            android:layout_marginTop="0dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:text="responce"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/txt_responce"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_marginTop="0dp"
            android:gravity="center"/>

        <Button
            android:text="submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btn_submit" />

        <Button
            android:text="next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btn_next" />

    </LinearLayout>

</RelativeLayout>
